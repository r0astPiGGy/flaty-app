<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hcmute.edu.vn.phamdinhquochoa.flatyapp.fragments.SavedFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="87sp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:background="@drawable/bg_function">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="47sp"
            android:background="@color/teal_700">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/saved"
                android:textColor="@color/black"
                android:fontFamily="@font/notop_sans_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_saved_Flat"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/teal_700">
                <TextView
                    android:id="@+id/tv_saved_Flat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Flat"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_saved_Region"
                android:layout_width="180sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_saved_Region"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Regions"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="360sp"
        android:layout_height="540sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="6dp">
        <LinearLayout
            android:id="@+id/layout_saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</LinearLayout>